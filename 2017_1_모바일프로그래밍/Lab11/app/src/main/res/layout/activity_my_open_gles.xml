<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.lab11.MyOpenGLESActivity">

    <com.example.student.lab11.MyGLSurfaceView
        android:id="@+id/MyGLSurfaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ToggleButton
        android:id="@+id/ambientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textOff="Ambient"
        android:textOn="Ambient"/>

    <ToggleButton
        android:id="@+id/diffuseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textOff="Diffuse"
        android:textOn="Diffuse"/>

</RelativeLayout>
