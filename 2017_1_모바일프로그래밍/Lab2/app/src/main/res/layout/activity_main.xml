<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.ajou.android.lab2.MainActivity">

    <TextView
        android:id = "@+id/weightLBL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "@string/weightLBL"
        android:gravity="center"
        android:layout_alignParentTop="true" />

    <EditText
        android:id = "@+id/TextEditor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/weightLBL" />

    <TextView
        android:id = "@+id/ouncesLBL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "@string/ouncesLBL"
        android:gravity="center"
        android:layout_below="@id/TextEditor" />

    <TextView
        android:id = "@+id/baseLBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/baseLBL"
        android:layout_below="@id/TextEditor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="107dp" />

    <TextView
        android:id = "@+id/addCostLBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/addCostLBL"
        android:layout_below="@id/baseLBL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id = "@+id/totalLBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/totalLBL"
        android:layout_below="@id/addCostLBL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id = "@+id/textBaseCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/zeroDec"
        android:layout_above="@id/addCostLBL"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id = "@+id/textAddedCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/zeroDec"
        android:layout_below="@id/textBaseCost"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id = "@+id/textTotalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/zeroDec"
        android:layout_below="@id/textAddedCost"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
